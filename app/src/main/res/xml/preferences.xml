<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Weather Location">
        <SwitchPreference
            android:key="USE_DEVICE_LOCATION"
            android:title="Use device location"
            android:summary="Allow the app to get current location"
            android:defaultValue="true"
            android:disableDependentsState="true"/>

        <EditTextPreference
            android:defaultValue="Warsaw"
            android:dependency="USE_DEVICE_LOCATION"
            android:key="CUSTOM_LOCATION"
            android:summary="Select custom location"
            android:title="Location" />

    </PreferenceCategory>

    <PreferenceCategory

        android:title="Units">
        <ListPreference
            android:key="UNIT_SYSTEM"
            android:title="Unit System"
            android:summary="%s"
            android:defaultValue="METRIC"
            android:entries="@array/unitSystemEntries"
            app:entryValues="@array/unitSystemValues"
            />
   </PreferenceCategory>

    <PreferenceCategory
        android:title="Alerts">

        <SwitchPreference
            android:key="SHOW_ALERTS"
            android:title="Show weather alerts"
            android:summary="Allow this app to notify you about special weather conditions"
            android:defaultValue="false"
           />
    </PreferenceCategory>
</PreferenceScreen>